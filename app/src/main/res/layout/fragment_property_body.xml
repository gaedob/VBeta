<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/property_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ficha Técnica"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/property_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="• $4500000000\n• 800 m²\n• No requiere renovación\n• Acepta crédito"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/property_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Descripción:\nUbicada en el corazón del bosque lo Echevers..."
        android:textSize="16sp" />
</LinearLayout>
